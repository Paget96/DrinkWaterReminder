<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <solid android:color="@color/switch_track_material" />
                    <corners android:radius="25dp" />
                    <size android:width="28dp" android:height="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle" android:useLevel="false" android:visible="true">
                    <solid android:color="@color/switch_track_material" />
                    <corners android:radius="25dp" />
                    <size android:width="28dp" android:height="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>