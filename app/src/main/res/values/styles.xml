<resources>

    <style name="OverflowMenu" parent="@style/Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/overflow_menu_background</item>
    </style>

    <style name="MaterialCard.Default" parent="@style/Widget.Material3.CardView.Filled">
        <item name="cardCornerRadius">24dp</item>
        <!--<item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/light_card_border</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardBackgroundColor">?colorCardBackground</item>-->
    </style>

    <!--Toolbar light-->
    <style name="MaterialToolbar.Default" parent="@style/Widget.Material3.Toolbar.Surface" />

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?colorPrimary</item>
    </style>

    <!-- Bottom navigation view -->
    <style name="BottomNavigationView.Default" parent="@style/Widget.Material3.BottomNavigationView">
        <item name="android:background">?colorActivityBackground</item>
    </style>

    <style name="BottomSheetModalStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">?strokeColor</item>
    </style>

    <style name="MaterialSwitch.Default" parent="Widget.Material3.CompoundButton.Switch">
        <item name="android:thumb">@drawable/switch_material_thumb</item>
        <item name="track">@drawable/switch_material_track</item>
    </style>

    <style name="ListViewContent">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="DividerText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TitleText">
        <item name="android:paddingTop">4dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PrimaryText" parent="@style/CardView.Content">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="SecondaryText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="SummaryText" parent="CardView.Content">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="CardView.Holder">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>

    <style name="CardView.Content">
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>
</resources>
